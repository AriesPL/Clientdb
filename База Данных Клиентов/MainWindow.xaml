<Window x:Class="База_Данных_Клиентов.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:База_Данных_Клиентов"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button Content="Новый клиент" Name="buttonNewClient" Click="ButtonNewClient_Click"
                    FontSize="25" Width="200" Height="60"
                    Margin="10"/>
            <Button Content="Список" Name="buttonlist" Click="Buttonlist_Click"
                    FontSize="25" Width="200" Height="60"
                    Margin="10"/>
            <Button Content="Выход" Name="buttonExit" Click="ButtonExit_Click"
                    FontSize="25" Width="200" Height="60"
                    Margin="10"/>

        </StackPanel>
    </Grid>
</Window>
